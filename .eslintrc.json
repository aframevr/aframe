{
  "extends": ["semistandard", "standard-jsx"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "array-bracket-spacing": "off",
    "array-callback-return": "off",
    "dot-notation": "off",
    "indent": "off",
    "no-mixed-operators": "off",
    "no-multi-spaces": "off",
    "no-unreachable-loop": "off",
    "no-unused-vars": "off",
    
    "no-useless-return": "off",
    "no-var": "off",
    "object-curly-newline": "off",
    "object-curly-spacing": "off",
    "object-shorthand": "off",
    "prefer-const": "off",
    "prefer-promise-reject-errors": "off",
    "prefer-regex-literals": "off",
    "quote-props": "off",
    "quotes": "off",
    "spaced-comment": "off",
    "valid-typeof": "off"
  },
  "overrides": [
    {
      "files": ["./src/**/*.js"],
      
      "parserOptions": {
        "sourceType": "script",
        "ecmaVersion": 5
      }
    },
    {
      "files": ["./src/core/**/a-*.js"],
      "parserOptions": {
        "ecmaVersion": 6
      }
    },
    {
      "files": ["./src/extras/primitives/primitives.js"],
      "parserOptions": {
        "ecmaVersion": 6
      }
    },
    {
      "files": ["./src/lib/**/*.js"],
      "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 12
      }
    }
  ]
}